{% extends "InamikaApiBundle::Emails/layout.html.twig" %}
{% block body %}
<h4>Orden de compra</h4>
<hr>
<table width="100%">
    <thead>
        <tr>
            <th align="center">Item</th>
            <th align="center">Sku</th>
            <th align="left">Descripcion</th>
            <th align="center">Cantidad</th>
            <th align="right">P/U</th>
            <th align="right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        {% for item in products %}
        <tr>
            <td align="center">{{ loop.index }}</td>
            <td align="center">{{ item.product.sku}}</td>
            <td align="left">{{ item.product.name }}</td>
            <td align="center">{{ item.amount }}</td>
            <td align="right">{{ (item.product.price) | number_format(2, ',', '.')}}</td>
            <td align="right">{{ item.total | number_format(2,',','.') }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}