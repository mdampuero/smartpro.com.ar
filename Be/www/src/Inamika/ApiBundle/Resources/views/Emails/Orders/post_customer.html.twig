{% extends "InamikaApiBundle::Emails/layout.html.twig" %}
{% block body %}
<h4>Hola {{ entity.customer.name }}, gracias por tu compra!</h4>
<p>Hemos recibido tu pedido y ya lo estamos preparando, te notificaremos por este medio cuando lo despachemos</p>
<h4>Datos de la orden</h4>
<hr>
    <p>
        <b>NÂº: </b>
        <span>{{ entity.id }}</span>
    </p>
    <p>
        <b>Cliente: </b>
        <span>{{ entity.customer.name }}</span>
    </p>
    <p>
        <b>Total: </b>
        <span>$ {{ entity.total | number_format(0, ',', '.') }}</span>
    </p>
<h4>Items de la orden</h4>
<hr>
<table width="100%">
    <thead>
        <tr>
            <th align="center">Item</th>
            <th align="center">Sku</th>
            <th align="left">Descripcion</th>
            <th align="center">Cantidad</th>
            <th align="right">P/U</th>
            <th align="right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        {% for item in entity.customer.cart.items %}
        <tr>
            <td align="center">{{ loop.index }}</td>
            <td align="center">{{ item.product.sku}}</td>
            <td align="left">{{ item.product.name }}</td>
            <td align="center">{{ item.amount }}</td>
            <td align="right">{{ (item.product.price) | number_format(2, ',', '.')}}</td>
            <td align="right">{{ item.total | number_format(2,',','.') }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}